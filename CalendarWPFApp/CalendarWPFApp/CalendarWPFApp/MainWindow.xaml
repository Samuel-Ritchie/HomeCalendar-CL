<Window x:Class="CalendarWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalendarWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#222222">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid x:Name="Header" Grid.Row="0" Background="#5e9146">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" FontSize="35" FontWeight="bold" Foreground="White" Margin="10 0">Corner Lurkers Calendar</TextBlock>
            <TextBlock Grid.Column="1" HorizontalAlignment="Right" FontSize="35" Foreground="White">📅</TextBlock>
        </Grid>

        <Grid x:Name="Input" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="150"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Margin="5,10,5,-4" Background="#5e9146" CornerRadius="5" BorderThickness="3" BorderBrush="#222222">
                <Button 
                Background="Transparent" BorderBrush="Transparent" Foreground="White" FontWeight="DemiBold" FontSize="20">Search File</Button>
            </Border>

            <Border Grid.Row="1" BorderBrush="White" BorderThickness="2" Margin="10"  CornerRadius="20">
                <Border Margin="10" Background="White" CornerRadius="10">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8*"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Border Margin="5" Grid.Row="0" Background="#222222" CornerRadius="8">
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="3*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Margin="3" Background="#5e9146" CornerRadius="5">
                                    <TextBlock Foreground="White" TextAlignment="Center" FontWeight="DemiBold" FontSize="15">Directory Path:</TextBlock>
                                </Border>

                                <TextBox Grid.Column="1" Name="chosenDirectoryName" Background="Transparent" BorderBrush="Transparent"></TextBox>
                            </Grid>
                        </Border>

                        <Border Margin="5" Grid.Row="1" Background="#222222" CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="3*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Margin="3" Background="#5e9146" CornerRadius="5">
                                    <TextBlock Foreground="White" TextAlignment="Center" FontWeight="DemiBold" FontSize="15">File Name:</TextBlock>
                                </Border>

                                <TextBox Name="chosenFileName" Grid.Column="1" Background="Transparent" BorderBrush="Transparent"></TextBox>
                            </Grid>
                        </Border>

                        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Margin="10" Background="#5e9146" CornerRadius="5" BorderThickness="3" BorderBrush="#222222">
                            <Button Name="fileExplorer" Click="fileExplorer_Click" 
                                Background="Transparent" BorderBrush="Transparent" Foreground="#222222" FontWeight="DemiBold" FontSize="30">📁</Button>
                        </Border>
                    </Grid>
                </Border>
            </Border>

            <Border Grid.Row="2" Grid.Column="0" Margin="5,10,5,-4" Background="#5e9146" CornerRadius="5" BorderThickness="3" BorderBrush="#222222">
                <Button 
                Background="Transparent" BorderBrush="Transparent" Foreground="White" FontWeight="DemiBold" FontSize="20">Search File</Button>
            </Border>
        </Grid>
    </Grid>
</Window>   
